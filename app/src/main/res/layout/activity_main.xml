<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="@drawable/pizza_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:text="@string/cuisine"
                android:id="@+id/buttonCuisine"
                android:layout_weight="1"
                android:background="@drawable/selected_background"
                android:onClick="alternerFragmentCuisineCommande"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:text="@string/commande"
                android:id="@+id/buttonCommande"
                android:layout_weight="1"
                android:background="@drawable/unselected_background"
                android:onClick="alternerFragmentCuisineCommande"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/mainFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
        </FrameLayout>



    </LinearLayout>
</RelativeLayout>
